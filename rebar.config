{erl_opts, [
  debug_info
]}.
{deps, [
  {eunit_formatters, ".*", {git, "git://github.com/seancribbs/eunit_formatters", "master"}},
  {edown, ".*", {git, "https://github.com/uwiger/edown", "master"}}
]}.
